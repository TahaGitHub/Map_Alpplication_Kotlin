<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/darkGrey</item>
        <item name="colorControlNormal">@color/darkGrey</item>
        <item name="android:textColorHint">@color/darkGrey</item>

        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/errorColor</item>
        <item name="colorControlActivated">@color/errorColor</item>
    </style>
</resources>